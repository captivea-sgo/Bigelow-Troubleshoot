<?xml version="1.0"?>
<odoo>
    <record model="ir.ui.view" id="payment_stripe_ext_invoice_form">
        <field name="name">account.invoice.form.payment</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='other_info']/group[1]" position="after">
                <group>
                    <field name="stripe_payment_url" invisible="1"/>
                </group>
            </xpath>
            <notebook position="before">
                <field name="portal_payment_options" groups="payment_stripe_ext.group_payment_options" class="view_portal_payment_options" widget="html" attrs="{'invisible': ['|',('type', '!=', 'out_invoice'),('state','in',('draft','paid'))]}"/>
            </notebook>
        </field>
    </record>
</odoo>
